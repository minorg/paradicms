# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~

# Auth0
GET         /api/auth0/login                org.paradicms.lib.generic.controllers.auth0.Auth0Controller.login(returnTo: String)
GET         /api/auth0/logout               org.paradicms.lib.generic.controllers.auth0.Auth0Controller.logout(returnTo: String)
GET         /api/auth0/loginCallback        org.paradicms.lib.generic.controllers.auth0.Auth0Controller.loginCallback(code: Option[String], state: Option[String])


# GraphQL
GET         /api/graphql                    controllers.graphql.GenericGraphQlController.graphql(query: String, variables: Option[String], operation: Option[String])
POST        /api/graphql                    controllers.graphql.GenericGraphQlController.graphqlBody
GET         /api/graphql-schema             controllers.graphql.GenericGraphQlController.renderSchema


# Integration testing
GET         /api/test/login controllers.test.GenericTestController.login(returnTo: String, userUri: Option[String])
GET         /api/test/reset controllers.test.GenericTestController.reset


# Assets
GET         /             controllers.Assets.at(path="/public", file="index.html")
GET         /$path<.*>    controllers.test.GenericTestController.frontEndPath(path)
